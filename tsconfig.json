{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "lib": ["esnext","DOM"],
        "outDir": "dist",
        "declarationDir": "dist",
        "strict": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "useUnknownInCatchVariables": false,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "noImplicitAny": false,
        "importHelpers": true,
        "preserveSymlinks": true,
      },
      "files": ["src/index.ts"],
}
